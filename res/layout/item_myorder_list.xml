<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/myorder_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp" >

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/note_green" />

        <TextView
            android:id="@+id/myorder_No"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="订单U020160829"
            android:textColor="#333333"
            android:textSize="15sp" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/myorder_list_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/myorder_menu" />

        <TextView
            android:id="@+id/myorder_list_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="签订中"
            android:textColor="#1aa8eb"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/myorder_list_rigt"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/home_icon" />
    </LinearLayout>

    <View
        android:id="@+id/myorder_cut"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c8c8c8" />

</LinearLayout>